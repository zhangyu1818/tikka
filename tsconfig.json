{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "tikka": ["packages/tikka/src"],
      "tikka-compile": ["packages/compile/src"],
      "tikka-shared": ["packages/shared/src"],
      "tikka-transform": ["packages/transform/src"],
      "tikka-transform-less": ["packages/transform-less/src"],
      "tikka-transform-sass": ["packages/transform-sass/src"],
      "tikka-declaration": ["packages/declaration/src"],
      "tikka-types/*": ["packages/types/*"]
    }
  },
  "include": ["packages/*/src", "packages/*/__test__"]
}
