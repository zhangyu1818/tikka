{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "cjsb": "latest",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "build:packages": "yarn workspaces foreach run build",
    "lint:script": "eslint packages/**/src/*.ts",
    "lint:fix": "yarn run lint:script --fix",
    "tsc:check": "tsc --noEmit",
    "prettier": "prettier --write packages/**/*",
    "test": "jest",
    "postinstall": "husky install"
  },
  "dependencies": {
    "lib-tool": "^0.0.3"
  }
}
